{
  "name": "wokibrain",
  "version": "1.0.0",
  "description": "NestJS-based restaurant booking engine for WokiBrain.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "nodemon --config nodemon.json",
    "start:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "test": "jest --config jest.config.cjs --runInBand",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:cov": "jest --config jest.config.cjs --coverage",
    "test:e2e": "jest --config jest.config.cjs --runInBand --testPathPattern=integration",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:nodemon": "nodemon --config nodemon.json",
    "dev": "concurrently \"npm run start:dev\" \"npm --workspace ui run dev\"",
    "install:all": "npm install && npm --prefix ui install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/swagger": "^7.1.16",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "module-alias": "^2.2.3",
    "pino": "^8.17.1",
    "pino-http": "^8.3.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "workspaces": [
    "ui"
  ]
}